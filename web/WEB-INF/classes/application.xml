<?xml version = "1.0" encoding = "ISO-8859-1"?><!DOCTYPE application SYSTEM "dtds/application.dtd"><application name="VeronaSuarez"> 	<!-- todos los modulos de la aplicación usarán por defecto este controlador en lugar de Typical -->	<default-module>		  		<controller name="VeronaSuarez"/>		</default-module>		<module name="ConsultInvoice">		<env-var name="XAVA_SEARCH_ACTION"		value="CRUD.searchReadOnly"/>		<model name="Factura"/>		<controller name="Print"/>	</module>	<module name="PapeleraFactura">		<env-var name="XAVA_LIST_ACTION"		value="Trash.restaurar"/> <!-- La acción a mostrar en cada fila -->		<model name="Factura"/>		<tab name="Borrada"/>  <!-- es un @Tab definido en la entidad para mostrar solo las entidades borradas -->		<controller name="Papelera"/> <!-- Con solo una acción: restore -->		<mode-controller name="ListOnly"/> <!-- Modo lista solo -->	</module>		<module name="PapeleraPedido">		<env-var name="XAVA_LIST_ACTION" value="Trash.restaurar"/>		<model name="Pedido"/>		<tab name="Borrada"/>   <!-- es un @Tab definido en la entidad para mostrar solo las entidades borradas -->		<controller name="Papelera"/>		<mode-controller name="ListOnly"/>	</module>		<!-- El objetivo de este módulo es visualizar la factura creada a partir de varios pedidos, y dar la opción de editarla. -->	<module name="CurrentInvoiceEdition">		<model name="Factura"/>		<controller name="CurrentInvoiceEdition"/> <!-- Este módulo sólo permite al usuario cambiar la factura, grabar los cambios o volver al módulo original -->		<mode-controller name="Void"/> <!-- Dado que este módulo es para editar una factura particular, no tiene modo lista, sino sólo modo detalle -->	</module>	</application>